# udacityandroid

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.happybirthdaysophia.MainActivity">


    <ImageView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:src ="@drawable/confetti"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/happy"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Happy"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="70sp"

        />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background ="@drawable/flags"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/happy"
        android:layout_toLeftOf="@+id/birthday"
        android:scaleType="centerCrop"
        android:src="@drawable/cakeslicedos" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_below="@id/happy"
        android:src="@drawable/confetti"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textSize="70sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_below="@id/happy"
        android:layout_alignParentRight="true"
        android:id="@+id/birthday"

        />



    <ImageView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:src ="@drawable/confetti"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/birthday"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sophia!"
        android:textSize="70sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_below="@id/birthday"
        android:layout_alignParentLeft="true"
        android:id="@+id/Sophia"

        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        android:background ="@drawable/balloons"
        android:layout_alignParentRight="true"
        android:layout_below = "@id/birthday"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/Sophia"
        android:background ="@drawable/cake"

        />

</RelativeLayout>


